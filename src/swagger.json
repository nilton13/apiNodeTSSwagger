  "paths": {
    "/roles": {
      "post": {
        "tags": ["Roles"],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody":{
          "content":{
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created.",
            "content": {
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties":{
                    "id":{
                      "type":"string"
                    },
                    "name":{
                      "type":"string"
                    },
                    "created_at":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role already exists"
          }
        }
      },
      "get":{
        "tags": ["Roles"],
        "summary": "List all Roles",
        "description": "Return all roles paginated.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of the page",
            "require": false,
            "schema":{
              "type":"number",
              "example": "page=1"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of registers per page",
            "require": false,
            "schema":{
              "type":"number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses":{
          "200": {
            "description":"Success",
            "content": {
              "application/json":{
                "example": {
                  "per_page": 15,
                  "total": 2,
                  "current_page": 1,
                  "data": [
                    {
                      "id": "98105ea2-b7ad-4bcd-b2a7-d36943084ca8",
                      "name": "User",
                      "created_at": "2023-01-17T16:02:55.000Z"
                    },
                    {
                      "id": "87a74e2d-6d41-4938-af74-8bb2cb22a3ba",
                      "name": "Admin",
                      "created_at": "2023-01-17T16:03:11.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/roles/{id}": {
      "put":{
        "tags": ["Roles"],
        "summary": "Update a role",
        "description": "Update role",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Indentify of a role",
            "require": true,
            "schema":{
              "type":"string"
            }
          }
        ],
        "requestBody":{
          "content": {
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name": {
                    "type": "string"
                  }
                },
                "example": "Administrator"
              }
            }
          }
        },
        "responses":{
          "200": {
            "description":"Success",
            "content": {
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties":{
                    "id":{
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description": "Bad request."
          },
          "404":{
            "description": "Role not found."
          }
        }
      }
    }
  }
}
